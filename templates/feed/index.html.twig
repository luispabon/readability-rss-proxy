{% extends 'base.html.twig' %}

{% block title %}Feed index{% endblock %}

{% block body %}
    <h1>Feed index</h1>

    <table class="table ui">
        <thead>
            <tr>
                <th>Id</th>
                <th>FeedUrl</th>
                <th>Title</th>
                <th>Description</th>
                <th>Last modified</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td>{{ feed.id }}</td>
                <td>{{ feed.feedUrl }}</td>
                <td>{{ feed.title }}</td>
                <td>{{ feed.description }}</td>
                <td>{{ feed.lastModified|date("F jS Y \\a\\t g:ia") }}</td>
                <td>
                    {% if feed.icon %}
                        <img src="{{ feed.icon }}" height="48" width="48"/>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('feed_display', {'id': feed.id}) }}" class="ui button">show</a>
                    <a href="{{ path('feed_edit', {'id': feed.id}) }}" class="ui primary button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('feed_new') }}" class="ui primary button">Create new</a>
{% endblock %}
