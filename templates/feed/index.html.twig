{% extends 'base.html.twig' %}

{% block title %}Feed index{% endblock %}

{% block body %}
    <h1>Feed index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>FeedUrl</th>
                <th>Title</th>
                <th>Description</th>
                <th>Icon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for feed in feeds %}
            <tr>
                <td>{{ feed.id }}</td>
                <td>{{ feed.feedUrl }}</td>
                <td>{{ feed.title }}</td>
                <td>{{ feed.description }}</td>
                <td>{{ feed.icon }}</td>
                <td>
                    <a href="{{ path('feed_show', {'id': feed.id}) }}">show</a>
                    <a href="{{ path('feed_edit', {'id': feed.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('feed_new') }}">Create new</a>
{% endblock %}
