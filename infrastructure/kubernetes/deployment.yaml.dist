#### Namespace to place everything in ####
---
kind: Namespace
apiVersion: v1
metadata:
  name: rss-proxy
  labels:
    name: rss-proxy

---

#### RSS Proxy website ###

# These should contain your app secrets
# app.secret is a random string used to generate tokens used for login, forms, etc
apiVersion: v1
kind: Secret
type: Opaque
metadata:
  name: rss-proxy
  namespace: rss-proxy
data:
  db.user: BASE64_ENCODED_DATABASE_USERNAME
  db.name: BASE64_ENCODED_DATABASE_NAME
  db.password: BASE64_DATABASE_PASSWORD
  app.secret: BASE64_ENCODED_RANDOM_STRING

---

# This is the point of entry to the site. You must configure an ingress to point here, preferably one that does
# ssl termination. It should point to rss-proxy.rss-proxy.svc.cluster.local (service_name.namespace.svc.cluster.local is
# the standard cross-namespace dns schema in k8s)
apiVersion: v1
kind: Service
metadata:
  name: rss-proxy
  namespace: sites
  labels:
    app: rss-proxy
spec:
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
  selector:
    app: rss-proxy

---

# Currently, database migrations only support postgres - will be fixing this
# Within postgres, any version higher than 9.6 will work just fine
# Cache prefix is used on cache keys, useful if you're sharing a redis instance with something else or if you
# want to bust the cache after a deployment by using a new one
kind: ConfigMap
apiVersion: v1
metadata:
  name: rss-proxy
  namespace: sites
data:
  db.host:      "IP_OR_HOSTNAME_FOR_DATABASE"
  db.port:      "5432"
  db.version:   "9.6"
  db.driver:    "pdo_pgsql"
  db.protocol:  "pgsql"
  db.charset:   "UTF8"
  redis.host:   "redis-rss-proxy"
  cache.prefix: "PREFIX_FOR_CACHE_WHATEVER_YOU_WANT_HERE"

---

# This is the site's deployment. It comprises of 3 containers:
# The init container always runs migrations
# The normal containers are: nginx ( containing frontend code and fcgi point of entrance for php) and php-fpm
apiVersion: apps/v1
kind: Deployment
metadata:
  name: rss-proxy
  namespace: sites
  labels:
    app: rss-proxy
spec:
  replicas: 2
  strategy:
    type: RollingUpdate
  selector:
    matchLabels:
      app: rss-proxy
  template:
    metadata:
      labels:
        app: rss-proxy
    spec:
      initContainers:
        - image: eu.gcr.io/auron-infrastructure/rss-proxy-php-fpm:latest
          name: db-migration
          command: [ "bin/console", "doctrine:migration:migrate", "--no-interaction" ]
          env:
            - name: APP_ENV
              value: prod

            - name: APP_SECRET
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: app.secret

            - name: REDIS_HOST
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: redis.host

            - name: REDIS_CACHE_PREFIX_SEED
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: cache.prefix

            - name: DB_HOST
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.host

            - name: DB_PORT
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.port

            - name: DB_VERSION
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.version

            - name: DB_DRIVER
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.driver

            - name: DB_PROTOCOL
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.protocol

            - name: DB_CHARSET
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.charset

            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.user

            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.password

            - name: DB_NAME
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.name

            - name: READABILITY_JS_ENDPOINT
              value: http://readability-js-server:3000

      containers:
        - image: eu.gcr.io/auron-infrastructure/rss-proxy-nginx:latest
          name: nginx

        - image: eu.gcr.io/auron-infrastructure/rss-proxy-php-fpm:latest
          name: php-fpm

          env:
            - name: APP_ENV
              value: prod

            - name: APP_SECRET
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: app.secret

            - name: REDIS_HOST
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: redis.host

            - name: DB_HOST
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.host

            - name: DB_PORT
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.port

            - name: DB_VERSION
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.version

            - name: DB_DRIVER
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.driver

            - name: DB_PROTOCOL
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.protocol

            - name: DB_CHARSET
              valueFrom:
                configMapKeyRef:
                  name: rss-proxy
                  key: db.charset

            - name: DB_USER
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.user

            - name: DB_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.password

            - name: DB_NAME
              valueFrom:
                secretKeyRef:
                  name: rss-proxy
                  key: db.name

            - name: READABILITY_JS_ENDPOINT
              value: http://readability-js-server:3000

---
#### REDIS ####

# Internal service for redis
apiVersion: v1
kind: Service
metadata:
  name: redis-rss-proxy
  namespace: sites
  labels:
    app: redis-rss-proxy
spec:
  ports:
    - port: 6379
      targetPort: 6379
      protocol: TCP
  selector:
    app: redis-rss-proxy

---

# Our redis needs aren't great. We're using it for some database caches, but crucially, we're using it for sessions
apiVersion: apps/v1
kind: Deployment
metadata:
  name: redis-rss-proxy
  namespace: sites
  labels:
    app: redis-rss-proxy
spec:
  replicas: 1
  strategy:
    type: RollingUpdate
  selector:
    matchLabels:
      app: redis-rss-proxy
  template:
    metadata:
      labels:
        app: redis-rss-proxy
    spec:
      containers:
        - image: redis:5-alpine
          name: redis

